<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RecordFragment">

        <ImageView
            android:id="@+id/imagenCabecera"
            android:layout_width="417dp"
            android:layout_height="92dp"
            android:layout_marginBottom="50dp"
            android:background="@color/black"
            android:src="@drawable/logo"
            app:layout_constraintBottom_toTopOf="@+id/recyclerViewRecords"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="589dp"
            android:text="RÃ©cords"
            android:textSize="48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imagenCabecera" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewRecords"
            android:layout_width="409dp"
            android:layout_height="568dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imagenCabecera" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>